<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Tarjeta de ConfiguraciÃ³n -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/configCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/surface_elevated"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <!-- Fila Trabajo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/workDurationLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/hint_work_duration_sec"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWorkDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="12dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleWorkUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnWorkSec"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWorkSec"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_seconds"
                        android:textSize="12sp"
                        android:minWidth="48dp"
                        android:paddingHorizontal="12dp"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWorkMin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_minutes"
                        android:textSize="12sp"
                        android:minWidth="48dp"
                        android:paddingHorizontal="12dp"
                        app:strokeColor="@color/primary" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Fila Descanso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restDurationLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/hint_rest_duration_sec"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputRestDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="12dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleRestUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnRestSec"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRestSec"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_seconds"
                        android:textSize="12sp"
                        android:minWidth="48dp"
                        android:paddingHorizontal="12dp"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRestMin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_minutes"
                        android:textSize="12sp"
                        android:minWidth="48dp"
                        android:paddingHorizontal="12dp"
                        app:strokeColor="@color/primary" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Fila Series -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/totalSetsLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_total_sets"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTotalSets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Indicador de Fase -->
    <TextView
        android:id="@+id/phaseIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/phase_work"
        android:textColor="@color/accent_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configCard" />

    <!-- Contador de Series -->
    <TextView
        android:id="@+id/setCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Serie 1/8"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phaseIndicator" />

    <!-- Progress Bar Circular -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circular_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setCounter" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timerDisplay"
        style="@style/TimerDisplayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar" />

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="@style/PrimaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_play"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            style="@style/SecondaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_stop"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/SecondaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            app:icon="@drawable/ic_refresh"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
