<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Configuración - Diseño Minimalista -->
    <LinearLayout
        android:id="@+id/configContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fila Trabajo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_work"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.15"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/inputWorkDuration"
                    android:layout_width="72dp"
                    android:layout_height="44dp"
                    android:background="@drawable/minimal_input_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:hint=""
                    android:importantForAutofill="no" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleWorkUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnWorkSec"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWorkSec"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_seconds"
                        android:textSize="11sp"
                        android:minWidth="42dp"
                        android:paddingHorizontal="10dp"
                        app:strokeColor="@color/surface_elevated"
                        app:backgroundTint="@color/background_dark" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWorkMin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_minutes"
                        android:textSize="11sp"
                        android:minWidth="42dp"
                        android:paddingHorizontal="10dp"
                        app:strokeColor="@color/surface_elevated"
                        app:backgroundTint="@color/background_dark" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila Descanso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_rest"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.15"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/inputRestDuration"
                    android:layout_width="72dp"
                    android:layout_height="44dp"
                    android:background="@drawable/minimal_input_background"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:hint=""
                    android:importantForAutofill="no" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleRestUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnRestSec"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRestSec"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_seconds"
                        android:textSize="11sp"
                        android:minWidth="42dp"
                        android:paddingHorizontal="10dp"
                        app:strokeColor="@color/surface_elevated"
                        app:backgroundTint="@color/background_dark" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRestMin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unit_minutes"
                        android:textSize="11sp"
                        android:minWidth="42dp"
                        android:paddingHorizontal="10dp"
                        app:strokeColor="@color/surface_elevated"
                        app:backgroundTint="@color/background_dark" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila Series -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sets"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.15"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/inputTotalSets"
                android:layout_width="72dp"
                android:layout_height="44dp"
                android:background="@drawable/minimal_input_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint=""
                android:importantForAutofill="no" />
        </LinearLayout>
    </LinearLayout>

    <!-- Indicador de Fase -->
    <TextView
        android:id="@+id/phaseIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/phase_work"
        android:textColor="@color/accent_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configContainer" />

    <!-- Contador de Series -->
    <TextView
        android:id="@+id/setCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Serie 1/8"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phaseIndicator" />

    <!-- Progress Bar Circular -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circular_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setCounter" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timerDisplay"
        style="@style/TimerDisplayStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar" />

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="@style/PrimaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_play"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            style="@style/SecondaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_stop"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/SecondaryButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            app:icon="@drawable/ic_refresh"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
